{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended"],
	"branchPrefix": "renovate/",
	"prConcurrentLimit": 10,
	"prHourlyLimit": 10,
	"labels": ["dependencies", "renovate"],
	"schedule": ["* 22 * * *"],
	"lockFileMaintenance": {
		"enabled": true,
		"schedule": ["on Sunday"]
	},
	"packageRules": [
		{
			"description": "Group Next.js and React related updates",
			"matchPackageNames": ["next", "react", "react-dom"],
			"groupName": "Next/React updates"
		},
		{
			"description": "Group MUI packages updates",
			"groupName": "MUI updates",
			"matchPackageNames": ["/^@mui//"]
		},
		{
			"description": "Group Tailwind CSS updates",
			"groupName": "Tailwind updates",
			"matchPackageNames": ["/^tailwind/", "/^@tailwind/"]
		},
		{
			"description": "Label major upgrades",
			"matchUpdateTypes": ["major"],
			"labels": ["major"]
		}
	]
}
